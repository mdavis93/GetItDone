<div class="col-md-4 col-sm-12 text-center todo_item">
  <div class="panel panel-primary panel-shadow no-overflow">
    <div class="panel-heading">
      <div class="row">
        <div class="col-sm-2">
          <i class="far fa-square fa-2x unfinished_task toggle_task"></i>
        </div>
        <div class="col-sm-10 text-right">
          <div class="font-2x text-center"><%= item.name %></div>
          <div class="alert <%= get_expiring_alert_color(time_ago_in_words(item.expires_at)) %> text-center no-pad">Expires in <%= time_ago_in_words(item.expires_at).capitalize %>.</div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="col-md-4 col-sm-12 text-center todo_item" draggable="true">
  <div class="panel panel-primary panel-shadow no-overflow">
    <div class="panel-heading">
      <div class="row">
        <div class="col-sm-2">
          <%= link_to user_item_url(id: item.id, user_id: @user.id), method: :delete, remote: true do %>
          <i class="fas fa-check fa-3x toggle_task task_complete"></i>
            <% end %>
        </div>
        <div class="col-sm-10">
          <div class="font-2x text-center"><%= item.name %></div>
          <div class="alert <%= get_expiring_alert_color(time_ago_in_words(item.expires_at)) %> text-center no-pad">Expires in <%= time_ago_in_words(item.expires_at) %>.</div>
        </div>
      </div>
    </div>
  </div>
</div>